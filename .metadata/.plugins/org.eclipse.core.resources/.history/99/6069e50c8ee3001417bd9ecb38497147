		buttonZap.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent arg0) {
			}
		});
		buttonZap.setFont(new Font("Arial", Font.BOLD, 14));
		buttonZap.setBounds(20, 366, 145, 43);
		contentPane.add(buttonZap);
		
